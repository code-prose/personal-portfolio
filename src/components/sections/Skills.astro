---
import SectionHeading from '../common/SectionHeading.astro';
import skills from '../../data/skills.json';

function getLanguageColor(language: string): string {
  const colors: Record<string, string> = {
    Rust: '#dea584',
    Python: '#3776ab',
    SQL: '#e38c00',
    'C++': '#f34b7d',
    JavaScript: '#f7df1e',
    Go: '#00add8',
  };
  return colors[language] || '#6b7280';
}
---

<section id="skills" class="py-24 px-4 bg-gray-50 dark:bg-gray-900/50">
  <div class="max-w-6xl mx-auto">
    <SectionHeading
      title="Skills & Technologies"
      subtitle="Tools and technologies I work with"
    />

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Languages -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">
          Languages
        </h3>
        <div class="space-y-4">
          {skills.languages.map((lang) => (
            <div class="flex items-start gap-3">
              <div
                class="w-3 h-3 rounded-full flex-shrink-0 mt-1.5"
                style={`background-color: ${getLanguageColor(lang.name)}`}
              />
              <div>
                <p class="font-medium text-gray-900 dark:text-white">{lang.name}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">{lang.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Tools & Platforms -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">
          Tools & Platforms
        </h3>
        <div class="space-y-4">
          {skills.tools.map((tool) => (
            <div class="flex items-start gap-3">
              <div class="w-3 h-3 rounded-full flex-shrink-0 mt-1.5 bg-primary-500" />
              <div>
                <p class="font-medium text-gray-900 dark:text-white">{tool.name}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">{tool.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Practices -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">
          Practices
        </h3>
        <div class="space-y-4">
          {skills.practices.map((practice) => (
            <div class="flex items-start gap-3">
              <div class="w-3 h-3 rounded-full flex-shrink-0 mt-1.5 bg-green-500" />
              <div>
                <p class="font-medium text-gray-900 dark:text-white">{practice.name}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">{practice.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
