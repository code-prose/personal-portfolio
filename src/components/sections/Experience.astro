---
import SectionHeading from '../common/SectionHeading.astro';
import experienceData from '../../data/experience.json';

// Separate work experience from education
const workExperience = experienceData.filter(item => !item.company.includes('University'));
const education = experienceData.filter(item => item.company.includes('University'));

function formatDate(dateStr: string | null): string {
  if (!dateStr) return 'Present';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}
---

<section id="experience" class="py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <SectionHeading
      title="Experience"
      subtitle="Professional background and education"
    />

    <div class="space-y-12">
      <!-- Work Experience -->
      {workExperience.map((job) => (
        <div class="bg-white dark:bg-gray-900 rounded-xl p-6 md:p-8 border border-gray-200 dark:border-gray-800">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-6">
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                {job.role}
              </h3>
              <p class="text-primary-600 dark:text-primary-400 font-medium">
                {job.company}
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-500">
                {job.location}
              </p>
            </div>
            <div class="flex items-center gap-2">
              {job.current && (
                <span class="px-2 py-1 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full">
                  Current
                </span>
              )}
              <span class="text-sm text-gray-500 dark:text-gray-500 whitespace-nowrap">
                {formatDate(job.startDate)} - {formatDate(job.endDate)}
              </span>
            </div>
          </div>

          <p class="text-gray-600 dark:text-gray-400 mb-6">
            {job.description}
          </p>

          {job.highlights.length > 0 && (
            <ul class="space-y-3 mb-6">
              {job.highlights.map((highlight) => (
                <li class="text-sm text-gray-600 dark:text-gray-400 flex items-start gap-3">
                  <svg class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>
          )}

          {job.technologies.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {job.technologies.map((tech) => (
                <span class="px-3 py-1 text-xs bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full">
                  {tech}
                </span>
              ))}
            </div>
          )}
        </div>
      ))}

      <!-- Education -->
      {education.length > 0 && (
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Education</h3>
          {education.map((edu) => (
            <div class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-800">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                <div>
                  <p class="font-bold text-gray-900 dark:text-white">{edu.role}</p>
                  <p class="text-primary-600 dark:text-primary-400">{edu.company}</p>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-500">
                  {formatDate(edu.startDate)} - {formatDate(edu.endDate)}
                </div>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </div>
</section>
