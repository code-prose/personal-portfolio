---
import SectionHeading from '../common/SectionHeading.astro';
import Button from '../common/Button.astro';
import personal from '../../data/personal.json';
---

<section id="about" class="py-24 px-4 bg-gray-50 dark:bg-gray-900/50">
  <div class="max-w-6xl mx-auto">
    <SectionHeading
      title="About Me"
      subtitle="Background and what drives my work"
    />

    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="relative">
        <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary-500 to-accent-500 p-1">
          <div class="w-full h-full rounded-xl bg-gray-200 dark:bg-gray-800 flex items-center justify-center">
            <span class="text-6xl text-gray-400 dark:text-gray-600">
              <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </span>
          </div>
        </div>
        <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-primary-500/20 rounded-full blur-2xl"></div>
        <div class="absolute -top-4 -left-4 w-32 h-32 bg-accent-500/20 rounded-full blur-2xl"></div>
      </div>

      <div>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
          {personal.bio}
        </p>

        <div class="space-y-4 mb-8">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-gray-700 dark:text-gray-300">{personal.location}</span>
          </div>

          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:${personal.email}`} class="text-primary-600 dark:text-primary-400 hover:underline">
              {personal.email}
            </a>
          </div>
        </div>

        {personal.resumeUrl && (
          <Button href={personal.resumeUrl} variant="primary" download="Logan_Rose_Resume.pdf">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download Resume
          </Button>
        )}
      </div>
    </div>
  </div>
</section>
